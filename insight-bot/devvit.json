{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "insight-bot",
  "version": "1.0.0",
  "description": "Consciousness-serving Reddit companion with PLK v5.0",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "assets"
  },
  "permissions": [
    "reddit.read",
    "reddit.write",
    "redis.use",
    "http.fetch"
  ],
  "menu": {
    "items": [
      {
        "label": "Insight-Bot Settings",
        "description": "Configure PLK analysis and crisis detection",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/settings"
      },
      {
        "label": "View Insight-Bot Stats",
        "description": "See response metrics and resonance scores",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/stats"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install",
    "onPostCreate": "/internal/on-post-create",
    "onCommentCreate": "/internal/on-comment-create"
  },
  "scheduledJobs": [
    {
      "name": "monitor_comments",
      "cron": "*/5 * * * *",
      "endpoint": "/internal/jobs/monitor"
    }
  ]
}